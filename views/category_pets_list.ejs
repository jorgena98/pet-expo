<%- include('layout/header') %>

<section class="container">

    <div class="row">
        <% if (pets.length > 0) { %>
            <% pets.forEach(pet => { %>
                <div class="col-md-4">
                    <div class="card mb-4 shadow-sm">
                        <img src="/uploads/<%= pet.image %>" class="card-img-top" alt="<%= pet.name %>" width="2em">
                        <div class="card-body">
                            <h5 class="card-title"><%= pet.name %> | <%= pet.origin %></h5>
                            <p class="card-text"><strong>Category </strong><%= pet.category.name %></p>
                        </div>
                    </div>
                </div>
            <% }); %>
        <% } else { %>
            <div class="col-md-12">
                <p>No pets in category "<%= title %>" found</p>
            </div>
        <% } %>
    </div>
</section>
   
<%- include('layout/footer') %>